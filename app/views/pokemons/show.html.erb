
<div class="container-show">
  <div class="card-show-all">

    <div class = "cards-left">
      <div class="pokemon-card">
        <div class = "card-image">
          <% if @pokemon.photo.attached? %>
            <%= cl_image_tag @pokemon.photo.key, width: 250, height: 300, crop: :fill %>
          <% else %>
            <%= cl_image_tag("tfoqtj3tttbjd0satx2t", width: 250, height: 300, crop: :fill) %>
          <% end %>
        </div>
        <div class="pokemon-description">
          <p><%= @pokemon.description %></p>
        </div>
      </div>
      <div class="button-all-down">
        <div class= "button-blue"></div>
        <div class= "button-green"></div>
        <div class= "button-orange"></div>
        <div class= "button-grey"></div>
      </div>
    </div>


    <div class = "cards-right">
        <h2><%= @pokemon.name.capitalize %></h2>

        <%if @pokemon.category == "Electric"%>
          <div class="electric">
        <%elsif @pokemon.category == "Fire"%>
          <div class="fire">
        <%elsif @pokemon.category == "Earth"%>
          <div class="earth">
        <%elsif @pokemon.category == "Psych"%>
          <div class="psych">
        <%elsif @pokemon.category == "Plant"%>
          <div class="plant">
        <%else%>
          <div class="water">
        <%end%>

            <div class="details">
                <div class= "detail-left">
                  <p><strong>Category</strong> : <%=@pokemon.category%></p>
                  <p><strong>Height</strong> : <%= @pokemon.height %> m</p>
                  <p><strong>Weight</strong> : <%= @pokemon.weight %> kg</p>
                </div>
                <div class = "detail-right">
                  <p><strong>Special Attack</strong> : <%= @pokemon.special_attack %></p>
                  <p><strong>Price per day</strong> : <%= @pokemon.price_per_day %> â‚¬</p>
                  <p><strong>Health Points</strong> : <%= @pokemon.health_point %></p>
                </div>
              </div>
            </div>
          <div class="show-button">
            <p><%= link_to raw('<i class="fas fa-arrow-left"></i>'), dashboard_path %></p>
            <p><%= link_to raw('<i class="fas fa-edit"></i>'), edit_pokemon_path(@pokemon) %></p>
            <p><%= link_to raw('<i class="fas fa-trash-alt"></i>'), pokemon_path(@pokemon), method: :delete, data: { confirm: "Are you sure?" } %></p>
          </div>
        </div>
    </div>
  </div>
</div>

