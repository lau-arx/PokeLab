
<div class="container-show m-5">
  <h2><%= @pokemon.name %></h2>

  <% if @pokemon.photo.attached? %>
    <p><%= cl_image_tag @pokemon.photo.key, height: 300, width: 400, crop: :fill %></p>
  <% else %>
    <%= cl_image_tag("tfoqtj3tttbjd0satx2t", width: 400, height: 300, crop: :fill) %>
  <% end %>

  <p><%= @pokemon.category %></p>
  <p><%= @pokemon.description %></p>
  <p><%= @pokemon.height %></p>
  <p><%= @pokemon.weight %></p>
  <p><%= @pokemon.special_attack %></p>
  <p><%= @pokemon.price_per_day %></p>
  <p><%= @pokemon.health_point %></p>

  <p><%= link_to "Return to list", pokemons_path, class: "btn btn-primary"   %></p>

</div>

<div class="btn-container m-5">
  <p><%= link_to "Edit Your Pokemon", edit_pokemon_path, class: "btn btn-primary"  %></p>
  <p><%= link_to "Delete #{@pokemon.name}",
            pokemon_path(@pokemon),
            method: :delete,
            data: { confirm: "Are you sure?" }%></p>

</div>
