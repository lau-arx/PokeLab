<div class="form-index">
  <%= render "shared/search_form", id:"flex-form-search" %>
</div>

<div class="index-body-container">
  <div class="container-index">
    <div class="cards cards-index">
      <h1>Around you:</h1>
      <% if @pokemons.length > 0%>
      <h3>+<%=@pokemons.length%> Pokemons in your area</h3>
      <% else %>
      <h3><%="No pokemon available in your area"%></h3>
      <% end %>
      <% @pokemons.each do |pokemon| %>
      <%if pokemon.photo.attached? %>
        <div class="card-pokemon" style = "background-image: linear-gradient(rgba(30,30,30,0.2), rgba(30,30,30,0.2)), url('<%= cl_image_path pokemon.photo.key%>')">
      <% else %>
        <div class="card-pokemon" style = "background-image: linear-gradient(rgba(30,30,30,0.2), rgba(30,30,30,0.2)), url('<%= image_path "verso-carte.png" %>')">
      <% end %>
          <h3><%= link_to pokemon.name.upcase , new_pokemon_booking_path(pokemon) %></h3>
          <p><%= link_to pokemon.category.upcase , new_pokemon_booking_path(pokemon) %></p>
          <p><%= pokemon.price_per_day %>/day</p>
        </div>
      <% end %>
    </div>

    <div class="map-index" id="map"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
</div>






