<div class="btn-return">
  <%= link_to raw('<i class="fas fa-arrow-left"></i>'), dashboard_path %>
</div>

<div class="mt-5 col-4 offset-4">

  <h1>Edit Your Pokemon</h1>

  <%= simple_form_for(@pokemon) do |f| %>
  <%= f.input :name %>
  <%= f.input :category, collection: ["Electric","Fire","Earth","Psych","Plant","Water"] %>
  <%= f.input :description %>
  <%= f.input :address %>
  <%= f.input :height, label: "Height (m)"%>
  <%= f.input :weight, label: "Weight (kg)" %>
  <%= f.input :special_attack %>
  <%= f.input :price_per_day, label: "Price per day (â‚¬)" %>
  <%= f.input :health_point %>
  <%= f.input :photo, as: :file %>
  <%= f.submit "Edit Pokemon", class: "btn btn-primary mt-5" %>
  <% end %>

</div>

<div class="btn-container mt-5 col-4 offset-4">
  <p><%= link_to "Show Pokemon", pokemon_path, class: "btn btn-primary"  %></p>
</div>


