<div class ="main-container py-5" style="background-image: url(<%= image_path 'background_form.png'%>)">
  <div class="main-container-sign-up col-4 offset-4 pt-5 pb-3">
    <h2>Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>

  <div class="btn-container py-5 col-4 offset-4">
    <%= render "devise/shared/links" %>
  </div>
</div>
